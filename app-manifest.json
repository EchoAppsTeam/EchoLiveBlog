{
	"id": "{%=manifest.id%}",
	"name": "{%=manifest.name%}",
	"description": "Echo Live Blog enables the editorial team to quickly create streams of live coverage during breaking news or major events. Embed in an Article to capture audience attention and drive engagement.",
	"app_version": "{%=packageVersions.stable%}",
	"cloudapp_protocol_version": "1.0.0",
	"icon": "{%=baseURLs.prod%}/images/icon.png",
	"developer": {
		"id": "echo",
		"name": "Echo",
		"url": "http://www.aboutecho.com",
		"email": "solutions@aboutecho.com",
		"icon": "http://cdn.echoenabled.com/images/echo.png"
	},
	"client_widget": {
		"component": "Echo.Apps.LiveBlog",
		"scripts": {
			"prod": "{%=baseURLs.prod%}/app.js",
			"dev": "{%=baseURLs.dev%}/app.js"
		}
	},
	"dashboards": [{
		"id": "instances",
		"type": "instances",
		"title": "Instances",
		"script": "{%=baseURLs.prod%}/dashboard.js",
		"component": "Echo.Apps.LiveBlog.Dashboard",
		"config": {
			"instanceManager": {
				"instance": {"useLoadingIcon": true}
			}
		}
	}, {
		"id": "docs",
		"type": "external",
		"title": "Documentation",
		"config": {
			"src": "http://emb.echoplatform.com/liveblog/docs/overview/"
		}
	}],
	"endpoints": {
		"instance/remove": {
			"url": "http://api.appserver.aboutecho.com/endpoints/dataserver/instance/remove"
		},
		"instance/add": {
			"url": "http://api.appserver.aboutecho.com/endpoints/dataserver/instance/add"
		}
	}
}
