{
    "id": "{%=manifest.id%}",
    "name": "{%=manifest.name%}",
    "description": "Echo Live Blog enables the editorial team to quickly create streams of live coverage during breaking news or major events. ",
    "app_version": "{%=packageVersions.stable%}",
    "cloudapp_protocol_version": "1.0.0",
    "developer": {
        "id": "echo",
        "name": "Echo",
        "url": "http://www.aboutecho.com",
        "email": "solutions@aboutecho.com",
        "icon": "http://cdn.echoenabled.com/images/echo.png"
    },
    "client_widget": {
        "component": "Echo.Apps.LiveBlogging",
        "script": "{%=baseURL%}/app.js"
    },
    "dashboards": [{
        "id": "instances",
        "type": "instances",
        "title": "Instances",
        "script": "{%=baseURL%}/dashboard.js",
        "component": "Echo.Apps.LiveBlogging.Dashboard",
        "config": {
            "instanceManager": {
                "instance": {"useLoadingIcon": true}
            }
        }
    }]
}
